{
  "env": {
    "node": true,
    "browser": true,
    "mocha": true,
    "amd": true,
    "es6": true
  },
  "globals": {
    "p5": true,
    "assert": true,
    "expect": true,
    "sinon": true
  },
  "parserOptions": {
    "ecmaVersion": 2017
  },
  "extends": ["eslint:recommended", "prettier"],
  "plugins": ["prettier"],
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "singleQuote": true
      }
    ],
    "no-cond-assign": [
      2,
      "except-parens"
    ],
    "eqeqeq": ["error", "smart"],
    "no-use-before-define": [
      2,
      {
        "functions": false,
        "classes": false
      }
    ],
    "new-cap": 0,
    "no-caller": 2,
    "no-undef": 2,
    "no-underscore-dangle": [
      2,
      {
        "allowAfterThis": true,
        "allowAfterSuper": true
      }
    ],
    "no-unused-vars": ["error", { "args": "none" }],
    "no-empty": ["error", { "allowEmptyCatch": true }],
    "no-console": "off"
  }
}
